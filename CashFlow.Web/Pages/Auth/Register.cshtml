@page "/register"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model CashFlow.Web.Pages.Auth.RegisterModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Register";
    ViewData["Heading"] = "Create an Account";
}

<form method="post" novalidate>
    @Html.AntiForgeryToken()
    <div asp-validation-summary="ModelOnly"
         class="alert alert-danger"
         role="alert">
    </div>
    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Input.Email"
               class="form-control"
               type="email" />
        <span asp-validation-for="Input.Email"
              class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <input asp-for="Input.Password"
               class="form-control"
               type="password" />
        <span asp-validation-for="Input.Password"
              class="text-danger small"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Confirm Password</label>
        <input asp-for="Input.ConfirmPassword"
               class="form-control"
               type="password" />
        <span asp-validation-for="Input.ConfirmPassword"
              class="text-danger small"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100">
        Register
    </button>

    @if (!ModelState.IsValid)
    {
        <div class="alert alert-danger mt-3 mb-0 text-center">
            Registration failed. Please check the form.
        </div>
    }

    <div class="text-center mt-3">
        <a href="/login">Already have an account? Login</a>
    </div>
</form>