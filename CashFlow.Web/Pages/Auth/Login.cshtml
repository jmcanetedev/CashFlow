@page "/login"
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model CashFlow.Web.Pages.Auth.LoginModel
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Login";
    ViewData["Heading"] = "Sign in to CashFlow";
}

<form method="post" novalidate>
    @Html.AntiForgeryToken()

    <div asp-validation-summary="ModelOnly"
         class="alert alert-danger"
         role="alert">
    </div>

    <div class="mb-3">
        <label class="form-label">Email</label>
        <input asp-for="Input.Email"
               class="form-control @(ViewData.ModelState["Input.Email"]?.Errors.Any() == true ? "is-invalid" : "")" />
        <span asp-validation-for="Input.Email"
              class="invalid-feedback"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Password</label>
        <input asp-for="Input.Password"
               type="password"
               class="form-control @(ViewData.ModelState["Input.Password"]?.Errors.Any() == true ? "is-invalid" : "")" />
        <span asp-validation-for="Input.Password"
              class="invalid-feedback"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100">
        Login
    </button>
    <div class="text-center mt-3">
        <a href="/register">Create an account</a>
    </div>
</form>

